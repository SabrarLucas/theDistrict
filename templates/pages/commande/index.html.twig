{% extends 'base.html.twig' %}

{% block title %}The District - Mes commandes{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Mes commandes</h1>
        <table class="table table-hover mt-4">
            <thead>
                <tr>
                    <th scope="col">Type</th>
                    <th scope="col">Total (en €)</th>
                    <th scope="col">Etat de la commande</th>
                    <th scope="col">Détail</th>
                </tr>
            </thead>
            <tbody>
            {% for commande in utilisateur.commandes %}
                <tr class="table-primary">
                    <th scope="row">{{ commande.commandedAt | date('d/m/Y') }}</th>
                    <td>{{ commande.total }}</td>
                    <td>{{ commande.etat }}</td>
                    <td><a href="{{ path('commande.detail', {id: commande.id}) }}" class="btn btn-secondary">Détail</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
