{% extends "base.html.twig" %}

{% block title %}The District - Détail de commande{% endblock %}

{% block body %}
<div class="container mt-4 mb-5">
    <div class="row">
        <div class="d-flex justify-content-center">
            {% for commande in commandes %}
                {% for detail in details %}
                        <div class="card border-warning mb-3" style="max-width: 20rem;">
                            <div class="card-header">Commande du {{ commande.commandedAt | date('d/m/Y') }}</div>
                            <div class="card-body">
                                <h4 class="card-title">Plat {{ detail.plat.libelle }}</h4>
                                <p class="card-text">Prix {{ commande.total }}</p>
                                <p class="card-text">quantite commandée {{ detail.quantite }}</p>
                                <img src="{{ asset('assets/uploads/plat/mini/300x300-') ~ detail.plat.image }}" alt="{{ detail.plat.libelle }}" width="100%">
                            </div>
                        </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}