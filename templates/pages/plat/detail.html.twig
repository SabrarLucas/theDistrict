{% extends "base.html.twig" %}

{% block title %}The District - Détail{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="mt-4">Détail {{ plat.libelle }}</h1>

            <div class="d-flex justify-content-center">
                <div class="card border-secondary mt-4 mb-3" style="max-width: 30rem;">
                    <div class="card-header">
                        <img src="{{ asset('assets/uploads/plat/mini/300x300-') ~ plat.image }}" alt="{{ plat.libelle }}" width="100%">
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ plat.description }}</p>
                        <p class="card-text">{{ plat.prix }}</p>
                    </div>
                    {% if app.user %}
                        <div class="card-body">
                            <a href="{{ path('panier.add', { id: plat.id }) }}" class="btn btn-primary">
                                <i class="uil uil-shopping-basket"></i> Ajouter
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}