{% extends 'base.html.twig' %}

{% block title %}The District - Plats par catégories{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <h3 class="mt-4">Nos plats</h3>
            <div class="d-flex justify-content-between">
                {% for plat in plats %}
                    {% if plat.active != false %}           
                        <div class="card border-secondary mt-4 mb-3" style="max-width: 20rem;">
                            <div class="card-header">{{ plat.libelle }}</div>
                            <div class="card-body">
                                <img src="{{ asset('images_the_district/food/') ~ plat.image }}" alt="{{ plat.image }}"  width="100%">
                                <p class="card-text mt-3">{{ plat.description }}</p>
                                <p class="card-text">{{ plat.prix }} €</p>
                            </div>
                            {% if app.user %}
                                <div class="card-body">
                                    <a href="#" class="btn btn-primary">
                                        <i class="uil uil-shopping-basket"></i> Ajouter
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
