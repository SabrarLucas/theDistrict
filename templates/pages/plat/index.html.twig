{% extends 'base.html.twig' %}

{% block title %}The District - Plats par cat√©gories{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <h3 class="mt-4">Nos plats</h3>
            <div class="d-flex justify-content-between">
                {% for plat in plats %}
                    {% if plat.active != false %}
                        <div class="card border-secondary mt-4 mb-3" style="max-width: 20rem;">
                            <div class="card-header">{{ plat.libelle }}</div>
                            <div class="card-body">
                                <a href="{{ path('plat.detail', { id: plat.id }) }}">
                                    <img src="{{ asset('assets/uploads/plat/mini/300x300-') ~ plat.image }}" alt="{{ plat.image }}"  width="100%">
                                </a>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
