{% extends 'base.html.twig' %}

{% block title %}TheDistrict - Cat√©gories{% endblock %}

{% block body %}
    <div class="container mt-4 mb-5">
        {% for categorie in categories %}
            <div class="card border-primary mb-3" style="max-width: 20rem;">
                <div class="card-header">{{ categorie.libelle }}</div>
                <div class="card-body">
                    <a href="{{ path('categorie.plat', { id: categorie.id }) }}"><img src="{{ asset('images_the_district/category/') ~ categorie.image }}" alt="{{ categorie.image }}"  width="100%"></a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
